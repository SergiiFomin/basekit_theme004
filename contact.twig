{% extends "layout.twig" %}

{% block content %}

<div class="bg-glow">

    <!--header-->
    <header>
        <div class="header">
            <div class="container">
                <div class=row>
                    <article class="span6">
                        <h1 class="brand">
                            {{widget('companyheader', 'companyheader', {"defaultlogo": asset('/images/logo.png')})|raw}}
                        </h1>
                    </article>
                    <article class="span6">
                        <div class="nav-collapse nav-collapse_ collapse">
                            {{widget('navigation', 'navigation', {'align': 'left'})|raw}}
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </header>

    <div class="global">

        <!--content-->
        <section class="">
            <div class="container">
                <div class="row">
                    <section class="span12">

                        {{widget('map', 'map', {'height': '470', 'zoom': '15', 'address': 'profile'})|raw}}

                        <div class="row">

                            <article class="span3">
                                {{widget('companyaddress', 'companyaddress', {})|raw}}
                            </article>

                            <article class="span1">

                            </article>

                            <article class="span8">
                                {{zone('main')|raw}}
                            </article>

                        </div>

                    </section>
                </div>
            </div>
        </section>

    </div>

    <!--footer-->
    <footer>
        <div class="container">
            <div class="row">
                <section class="span12">
                    <div class="row">
                        <article class="span12">
                            <h1 class="brand">
                                {{widget('companyheader', 'companyheader', {"defaultlogo": asset('/images/logo.png')})|raw}}
                            </h1>
                            {{widget('content', 'copyright_copy', {content: '&copy; &nbsp;2013&nbsp; |&nbsp; All Rights Reserved &nbsp;|', lines: 'all'})|raw}}
                            <a href="#">{{widget('content', 'copyright_link', {content: 'Privacy Policy', lines: 'all'})|raw}}</a>
                            {{widget('socialicons', 'socialicons', {'googleplus': 'https://plus.google.com', 'linkedin':'http://www.linkedin.com/', 'facebook': 'https://www.facebook.com', 'twitter': 'https://twitter.com', 'youtube': 'https://www.youtube.com/', 'rss': '#'})|raw}}
                        </article>
                    </div>
                </section>
            </div>
        </div>
    </footer>
    
</div>

{% endblock %}