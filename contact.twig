{% extends "layout.twig" %}

{% block content %}

<div class="bg-glow">

    <!--header-->
    <header>
        <div class="header">
            <div class="container">
                <div class=row>
                    <article class="span6">
                        {{widget('logo', 'name', {"defaultlogo": asset('images/logo.png')})|raw}}
                        {{widget('space', 'space', {'height': '30'})|raw}}
                    </article>
                    <article class="span6">
                        <div class="nav-collapse nav-collapse_ collapse">
                            {{widget('navigation', 'navigation', {'align': 'left'})|raw}}
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </header>

    <div class="global">

        <!--content-->
        <section class="">
            <div class="container">
                <div class="row">
                    <section class="span12">

                        {{widget('map', 'map', {'height': '470', 'zoom': '15', 'address': 'profile'})|raw}}

                        <div class="row divider1">

                            <article class="span3">
                                {{widget('content', 'content', {content: '<h2>Address</h2>', lines: 'all'})|raw}}
                                {{widget('companyaddress', 'companyaddress', {})|raw}}
                            </article>

                            <article class="span1">

                            </article>

                            <article class="span8">
                                {{zone('main')|raw}}
                            </article>

                        </div>

                    </section>
                </div>
            </div>
        </section>

    </div>

    <!--footer-->
    <footer>
        <div class="container">
            <div class="row">
                <section class="span12">
                    <div class="row">
                        <article class="span12">
                            {{widget('logo', 'name', {"defaultlogo": asset('images/logo.png')})|raw}}
                            {{widget('profile', 'copyright', { 'profileType':'copyright' })|raw}}
                            {{widget('socialicons', 'socialicons', {'googleplus': 'https://plus.google.com', 'linkedin':'http://www.linkedin.com/', 'facebook': 'https://www.facebook.com', 'twitter': 'https://twitter.com', 'youtube': 'https://www.youtube.com/', 'rss': '#'})|raw}}
                            {{widget('space', 'space', {'height': '50'})|raw}}
                        </article>
                    </div>
                </section>
            </div>
        </div>
    </footer>
    
</div>

{% endblock %}